<idea-plugin>
  <id>com.ptsans.idea</id>
  <name>Material Theme UI Lite</name>
  <version>0.1</version>
  <category>Themes</category>
  <vendor email="elior@material-theme.com" url="https://github.com/mallowigi">AtomMaterial</vendor>

  <description><![CDATA[
    <!--suppress LongLine -->
    <h1>Material Theme UI Lite</h1>
    <h2>Material Design Experience for JetBrains IDEs</h2>
    <hr/>
    <div>
      <a href="https://www.material-theme.com" style="outline: none;">
        <img src="https://raw.githubusercontent.com/ChrisRM/material-theme-jetbrains/master/laptop-full.png"
             width="640"
             alt="theme">
      </a>
    </div>
    <hr>
    <p>This is a lite version of the <a href="https://plugins.jetbrains.com/plugin/8006-material-theme-ui">Material
      Theme UI Plugin</a>
      containing only the themes and color schemes.</p>
    ]]></description>

  <depends>com.intellij.modules.platform</depends>
  <change-notes></change-notes>

  <idea-version since-build="191.6183"/>

  <extensions defaultExtensionNs="com.intellij">
    <themeProvider id="Material Darker Compact Contrast" path="/Material Darker Compact.theme.json"/>
  </extensions>

</idea-plugin>
